{% extends _layout %}

{% block style %}
    {{ css('libs/select2/select2.css', 'all', 'css') }}
{% endblock %}

{% block content %}
    <section>
        <div class="section-header">
            <ol class="breadcrumb">
                <li><a href="{{ site_url('dashboard') }}">dashboard</a></li>
                <li><a href="{{ site_url('ms/desa') }}">desa</a></li>
                <li class="active">Form Data</li>
            </ol>
        </div>
        <div class="section-body contain-lg">

            <div class="card card-underline">
                <div class="card-head">
                    <header>Desa</header>
                    <div class="tools">
                        <div class="btn-group">
                            <a class="btn btn-icon-toggle btn-collapse"><i class="fa fa-angle-down"></i></a>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <form id="AjaxForm" action="{{ site_url('ms/desa/submit') }}" class="form form-validate floating-label" novalidate="novalidate" method="post">
                        <input type="hidden" name="{{ _csrf }}" value="{{ _token }}" />
                        <input type="hidden" name="id" value="{{ object.mst_desa_id }}" />
                        <div class="card">
                            <div class="card-body">
                                <div class="form-group">
                                    <select name="kecamatan" class="form-control select2-list" data-placeholder="Select an item">
                                        {% for kecamatan in list %}
                                            <option value="{{ kecamatan.mst_kecamatan_id }}" {% if (kecamatan.mst_kecamatan_id == object.mst_kecamatan_id) %} selected="selected" {% endif %}>{{ kecamatan.mst_kecamatan_name }}</option>
                                        {% endfor %}
                                    </select>
                                    <label>Kecamatan</label>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" id="name" name="name" value="{{ object.mst_desa_name }}" />
                                    <label for="name">Nama Desa</label>
                                </div>
                            </div>
                            <div class="card-actionbar">
                                <div class="card-actionbar-row">
                                    <button type="button" class="btn ink-reaction btn-raised btn-default">Batal</button>&nbsp;
                                    <button type="submit" class="btn ink-reaction btn-raised btn-primary" data-loading-text="<i class='fa fa-spinner fa-spin'></i> Menyimpan...">Simpan</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </section>

{% endblock %}

{% block js %}
    {{ js('libs/jquery-validation/dist/jquery.validate.min.js', 'js') }}
    {{ js('libs/jquery-validation/dist/additional-methods.min.js', 'js') }}
    {{ js('libs/select2/select2.min.js', 'js') }}
{% endblock %}

{% block js_core %}
    {{ js('core/live/Codeigniter.js', 'js') }}
    {{ js('core/live/FormComponents.js', 'js') }}
{% endblock %}